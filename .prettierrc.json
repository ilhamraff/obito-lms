{
    "printWidth": 100,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "plugins": ["@prettier/plugin-php", "@shufo/prettier-plugin-blade", "prettier-plugin-blade"],
    "overrides": [
        {
            "files": ["*.blade.php"],
            "options": {
                "tabWidth": 4,
                "parser": "blade"
            }
        },
        {
            "files": "*.php",
            "options": {
                "parser": "php"
            }
        }
    ]
}
