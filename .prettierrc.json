{
  "printWidth": 100,
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "plugins": [
    "@prettier/plugin-php",
    "prettier-plugin-blade"
  ],
  "overrides": [
    {
      "files": "*.blade.php",
      "options": {
        "parser": "blade"
      }
    },
    {
      "files": "*.php",
      "options": {
        "parser": "php"
      }
    }
  ]
}
